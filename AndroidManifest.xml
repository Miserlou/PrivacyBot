<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.ale.privacybot"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".MainMenuActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".InstallerActivity" />
        <activity android:name=".KeyManagementActivity" />
        <activity android:name=".KeyInfoListViewActivity" />
        <activity android:name=".TextMenuActivity" />
        <activity android:name=".EmailMenuActivity" />
        <activity android:name=".ChooseRecepientActivity" />
        <activity android:name=".SendMessageActivity" />
        <activity android:name=".SendKeyOrPbotActivity" />
        
        <activity android:name=".KeyImporterActivity">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                            <category android:name="android.intent.category.DEFAULT" />
                            <category android:name="android.intent.category.BROWSABLE" />
                            <data android:scheme="file" /> 
                			<data android:mimeType="application/pgp-keys" />
                			<!-- <data android:mimeType="*/*"/>-->
                			<data android:pathPattern=".*\\.key" />
                			<data android:pathPattern=".*\\.asc" />
            </intent-filter> 
		</activity>
		
		 <activity android:name=".ViewDecryptedMessageActivity">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                            <category android:name="android.intent.category.DEFAULT" />
                            <category android:name="android.intent.category.BROWSABLE" />
                            <data android:scheme="file" /> 
                		    <data android:mimeType="application/pgp-encrypted" />>
                			<!-- <data android:mimeType="*/*"/>--> 
                			<data android:pathPattern=".*\\.gpg" />
            </intent-filter> 
		</activity>
        

		<activity android:name="org.openintents.filemanager.FileManagerActivity" android:label="@string/app_name">
        </activity>

    </application>
    <uses-sdk android:minSdkVersion="4" />

</manifest> 